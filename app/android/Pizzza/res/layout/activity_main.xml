<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/promo_fragment"
        android:name="org.elkuku.pizzza.promos.PromoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/promo" />

    <fragment
        android:id="@+id/ControlsFragment"
        android:name="org.elkuku.pizzza.ControlsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/controls" />

    <fragment
        android:id="@+id/listFragment"
        android:name="org.elkuku.pizzza.menu.MenuListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>