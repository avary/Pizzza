<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <fragment
        android:id="@+id/ControlsFragment"
        android:name="org.elkuku.pizzza.ControlsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        tools:layout="@layout/controls" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/promo_fragment"
            android:name="org.elkuku.pizzza.PromoFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/promo" />

        <fragment
            android:id="@+id/listFragment"
            android:name="org.elkuku.pizzza.MenuListFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout><!--
